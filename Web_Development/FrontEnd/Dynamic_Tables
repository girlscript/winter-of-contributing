    <!-- JS/JQuery Code Starts -->
    <script>
        function myFunction() {
            document.getElementById("table").deleteRow(-1);
        }
    </script>
    <script>
        function adding() {
            var fname = prompt('Enter First Name')
            var lname = prompt('Enter Last Name')
            var city = prompt('Enter City')
            var state = prompt('Enter State')
            var new_row =
                "<tr><td>" + fname + "</td><td>" + lname + "</td><td>" + city + "</td><td>" + state + "</td></tr>"
            $("table tbody").append(new_row); <!-- Actual code for adding tables dynamically -->


        }
    </script>
    <!-- this script is optional, giving user the choice to add coloours to the table or not -->
    <script type="text/javascript">
        function addingColor() {
            $("table tr:nth-child(even)").addClass("striped");
        }
    </script>


