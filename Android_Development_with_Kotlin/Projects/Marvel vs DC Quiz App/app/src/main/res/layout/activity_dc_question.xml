<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".DCQuestion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/dc_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Dques01"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="#363A43"
            android:textSize="22sp"
            />

        <ImageView
            android:id="@+id/dc_img"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="200dp"
            android:src="@drawable/dcimg01"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">
            <ProgressBar
                android:id="@+id/dc_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="10"
                android:minHeight="50dp"
                android:progress="0"
                android:indeterminate="false">
            </ProgressBar>

            <TextView
                android:id="@+id/dc_pro_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:textAlignment="center"
                android:textColorHint="#7A8089"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/dc_option_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/option_border_background"
            android:gravity="center"
            android:padding="15dp"
            android:textAlignment="center"
            android:textColor="#7A8089"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dc_option_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/option_border_background"
            android:gravity="center"
            android:padding="15dp"
            android:textAlignment="center"
            android:textColor="#7A8089"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dc_option_03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/option_border_background"
            android:gravity="center"
            android:padding="15dp"
            android:textAlignment="center"
            android:textColor="#7A8089"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dc_option_04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/option_border_background"
            android:gravity="center"
            android:padding="15dp"
            android:textAlignment="center"
            android:textColor="#7A8089"
            android:textSize="18sp" />
        <Button
            android:id="@+id/dc_submit_bttn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gradEnd"
            android:text="@string/Submit"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold">
        </Button>
    </LinearLayout>

</ScrollView>